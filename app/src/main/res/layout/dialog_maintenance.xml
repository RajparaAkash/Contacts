<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_15sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivMaintenance"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_125sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/maintenance"
                android:contentDescription="@string/app_under_maintenance" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_minus10sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:text="@string/app_under_maintenance"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:text="@string/sorry_service_is_not_available_due_to_maintenance_please_try_after_some_time_or_retry_thank_you"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp">

                <TextView
                    android:id="@+id/tvRetry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:padding="@dimen/_15sdp"
                    android:gravity="center"
                    android:text="@string/retry"
                    android:textStyle="bold"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_13ssp" />


                <TextView
                    android:id="@+id/tvDismiss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:padding="@dimen/_15sdp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/dismiss"
                    android:textSize="@dimen/_13ssp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
