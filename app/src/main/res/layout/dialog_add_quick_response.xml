<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_bottom"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            app:cardBackgroundColor="@color/dialog_top_view"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:text="@string/dialog_quick_response_add"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@drawable/bg_edittext_response"
                android:fontFamily="@font/medium"
                android:hint="@string/dialog_quick_response_hint"
                android:paddingHorizontal="@dimen/_12sdp"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/_11ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/app_btn_round_border"
                    android:backgroundTint="#210090F5"
                    android:fontFamily="@font/semibold"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/_11ssp" />

                <View
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tvAdd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/app_btn_round"
                    android:fontFamily="@font/semibold"
                    android:gravity="center"
                    android:text="@string/add"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>