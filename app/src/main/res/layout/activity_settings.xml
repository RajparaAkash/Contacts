<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical"
    tools:context=".Activities.ActivitySettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnBack"
            style="@style/ToolbarIcon"
            android:src="@drawable/back_arrow" />

        <TextView
            style="@style/ToolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_settings" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/medium"
                    android:text="@string/setting_general"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_11ssp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/setting_card_color"
                    app:cardCornerRadius="@dimen/_12sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/defaultLayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_43sdp"
                            android:background="?android:selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/_12sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="@string/make_default"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:background="@color/setting_divider" />

                        <LinearLayout
                            android:id="@+id/llQuickResponse"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_43sdp"
                            android:background="?android:selectableItemBackground"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/_12sdp"
                            android:paddingEnd="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/regular"
                                    android:singleLine="true"
                                    android:text="@string/show_quick_decline_messages"
                                    android:textColor="@color/text_black"
                                    android:textSize="@dimen/_12ssp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:background="@color/setting_divider" />

                        <LinearLayout
                            android:id="@+id/afterCallLayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_43sdp"
                            android:background="?android:selectableItemBackground"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/_12sdp"
                            android:paddingEnd="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/regular"
                                    android:singleLine="true"
                                    android:text="@string/show_caller_dialog"
                                    android:textColor="@color/text_black"
                                    android:textSize="@dimen/_12ssp" />

                            </LinearLayout>

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/showAfterCallDialog"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@null"
                                android:checked="false"
                                android:clickable="false"
                                android:focusable="false"
                                android:thumb="@drawable/switch_thumb"
                                app:track="@drawable/switch_track" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:background="@color/setting_divider" />

                        <LinearLayout
                            android:id="@+id/llDialSound"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_43sdp"
                            android:background="?android:selectableItemBackground"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/_12sdp"
                            android:paddingEnd="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/regular"
                                    android:singleLine="true"
                                    android:text="@string/show_dial_pad_sound"
                                    android:textColor="@color/text_black"
                                    android:textSize="@dimen/_12ssp" />

                            </LinearLayout>

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switchDialSound"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@null"
                                android:checked="false"
                                android:clickable="false"
                                android:focusable="false"
                                android:thumb="@drawable/switch_thumb"
                                app:track="@drawable/switch_track" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:background="@color/setting_divider" />

                        <LinearLayout
                            android:id="@+id/llLedFlash"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_43sdp"
                            android:background="?android:selectableItemBackground"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/_12sdp"
                            android:paddingEnd="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/regular"
                                    android:singleLine="true"
                                    android:text="@string/show_led_flash"
                                    android:textColor="@color/text_black"
                                    android:textSize="@dimen/_12ssp" />

                            </LinearLayout>

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switchLedFlash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@null"
                                android:checked="false"
                                android:clickable="false"
                                android:focusable="false"
                                android:thumb="@drawable/switch_thumb"
                                app:track="@drawable/switch_track" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                app:cardBackgroundColor="@color/setting_card_color"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llTheme"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_43sdp"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="@string/setting_dark_theme"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:background="@null"
                            android:checked="false"
                            android:clickable="false"
                            android:focusable="false"
                            android:thumb="@drawable/switch_thumb"
                            app:track="@drawable/switch_track" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:background="@color/setting_divider" />

                    <LinearLayout
                        android:id="@+id/llLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_43sdp"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_12sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="@string/title_lang"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutBlockContact"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_43sdp"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="@string/block_contact"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/medium"
                android:text="@string/setting_edit_contact"
                android:textColor="@color/app_color"
                android:textSize="@dimen/_11ssp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/layoutDefaultAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                app:cardBackgroundColor="@color/setting_card_color"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:selectableItemBackground"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:paddingVertical="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="@string/default_account"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvDefaultAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:text="@string/phone"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/space_native_banner_holder" />

</LinearLayout>
